<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/gray"
    android:layout_height="match_parent"
    tools:context=".ui.store.PlaceOrderActivity">

    <include
        android:id="@+id/include"
        layout="@layout/custom_toolbar"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display"
                android:padding="5dp"
                android:text="ORDER SUMMARY"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewOrder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/summary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >


                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:adjustViewBounds="true"
                        android:background="@color/black"
                        android:scaleType="fitXY"
                        android:src="@drawable/product_placeholder"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:orientation="vertical"

                        app:layout_constraintGuide_percent="0.25" />

                    <TextView
                        android:id="@+id/tvProductName_sum"
                        android:layout_width="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="Remembering Product"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvProductPrice_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="\u0024 500"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@id/tvProductName_sum"
                        app:layout_constraintTop_toBottomOf="@+id/tvProductName_sum" />

                    <TextView
                        android:id="@+id/tvProductPriceBefore_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="\u0024 1500"
                        android:textColor="@color/flat_red_1"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvProductPrice_sum"
                        app:layout_constraintStart_toEndOf="@+id/tvProductPrice_sum"
                        app:layout_constraintTop_toTopOf="@+id/tvProductPrice_sum" />

                    <TextView
                        android:id="@+id/tvProductPriceSave_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="Save \u0024 1000"
                        android:textColor="@color/flat_blue_1"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@id/guideline3"
                        app:layout_constraintTop_toBottomOf="@+id/tvProductPrice_sum" />

                    <TextView
                        android:id="@+id/tvProductPriceSavePercent_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="(35%)"
                        android:textColor="@color/flat_blue_1"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        app:layout_constraintStart_toEndOf="@+id/tvProductPriceSave_sum"
                        app:layout_constraintTop_toTopOf="@+id/tvProductPriceSave_sum" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/personal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display"
                android:padding="10dp"
                android:text="PERSONAL DETAILS"
                android:textColor="@color/black"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewOrder">

            </TextView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPersonal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personal">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.30" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/member_name"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_display"
                            android:lineSpacingExtra="5dp"
                            android:maxLines="2"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:background="@drawable/curved_bg_transparent"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/guideline5"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/gray"
                            app:layout_constraintTop_toBottomOf="@id/etName">

                        </View>

                        <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/barrier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:barrierDirection="bottom"
                            app:constraint_referenced_ids="textView16,etName,view2" />


                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="5dp"
                            android:text="@string/mobile"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/barrier" />

                        <EditText
                            android:id="@+id/etMobile"
                            android:layout_width="0dp"
                            android:background="@drawable/curved_bg_transparent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:fontFamily="@font/sf_pro_display"
                            android:lineSpacingExtra="5dp"
                            android:maxLines="2"

                            android:scrollbars="vertical"

                            android:textColor="@color/black"
                            android:textSize="14dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/guideline5"
                            app:layout_constraintTop_toBottomOf="@id/etName" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/gray"
                            app:layout_constraintTop_toBottomOf="@id/etMobile">

                        </View>

                        <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/barrier1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:barrierDirection="bottom"
                            app:constraint_referenced_ids="textView17,etMobile,view3" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/profile_email"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etMobile" />

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:background="@drawable/curved_bg_transparent"
                            android:fontFamily="@font/sf_pro_display"
                            android:lineSpacingExtra="5dp"
                            android:maxLines="2"

                            android:scrollbars="vertical"

                            android:textColor="@color/black"
                            android:textSize="14dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/guideline5"
                            app:layout_constraintTop_toBottomOf="@id/etMobile" />

                    <View
                        android:id="@+id/view38"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/etEmail">

                    </View>

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="textView18,etEmail,view38" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/member"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view38" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:id="@+id/layout_spinner_member"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/transparent_bg_bordered"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline5"
                        app:layout_constraintTop_toBottomOf="@id/view38"
                        android:layout_height="35dp">

                            <Spinner
                                android:id="@+id/spinner_member"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"

                            android:spinnerMode="dropdown"

                            />
                    </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/shipping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display"
                android:padding="10dp"
                android:text="SHIPPING ADDRESS"
                android:textColor="@color/black"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewPersonal">

            </TextView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewShipping"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shipping">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline55"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.30" />

                    <TextView
                        android:id="@+id/textView166"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_address_street_address"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etStreetAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display"
                        android:lineSpacingExtra="5dp"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:scrollbars="vertical"
                        android:background="@drawable/curved_bg_transparent"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline55"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view22"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/etStreetAddress">

                    </View>

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrierSt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="textView166,etStreetAddress,view22" />


                    <TextView
                        android:id="@+id/textView177"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:text="@string/profile_address_Country"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/barrierSt" />

                    <EditText
                        android:id="@+id/etCountry"
                        android:layout_width="0dp"
                        android:background="@drawable/curved_bg_transparent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:fontFamily="@font/sf_pro_display"
                        android:lineSpacingExtra="5dp"
                        android:maxLines="2"
                        android:text="@string/Country"
                        android:focusable="false"
                        android:scrollbars="vertical"

                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline55"
                        app:layout_constraintTop_toBottomOf="@id/etStreetAddress" />

                    <View
                        android:id="@+id/view33"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/etCountry">

                    </View>

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrierCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="textView177,etCountry,view33" />

                    <TextView
                        android:id="@+id/textView188"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/profile_address_state"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/etCountry" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:id="@+id/layout_spinner_state"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/transparent_bg_bordered"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline55"
                        app:layout_constraintTop_toBottomOf="@id/etCountry"
                        android:layout_height="35dp">
                        <Spinner
                            android:id="@+id/spinner_state_sum"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"

                            android:spinnerMode="dropdown"

                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/view333"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/layout_spinner_state">

                    </View>

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrierState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="textView188,layout_spinner_state,view333" />

                    <TextView
                        android:id="@+id/textView1888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/profile_address_city"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_spinner_state" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:id="@+id/layout_spinner_city"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/transparent_bg_bordered"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline55"
                        app:layout_constraintTop_toBottomOf="@id/layout_spinner_state"
                        android:layout_height="35dp">
                        <Spinner
                            android:id="@+id/spinner_city_sum"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"

                            android:spinnerMode="dropdown"

                            />
                    </LinearLayout>

                    <View
                        android:id="@+id/view334"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/layout_spinner_city">

                    </View>

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrierCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="textView1888,layout_spinner_city,view334" />

                    <TextView
                        android:id="@+id/textView168"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_address_zipcode"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_spinner_city" />

                    <EditText
                        android:id="@+id/etZipcode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display"
                        android:lineSpacingExtra="5dp"
                        android:layout_marginTop="10dp"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:scrollbars="vertical"
                        android:background="@drawable/curved_bg_transparent"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline55"
                        app:layout_constraintTop_toBottomOf="@id/layout_spinner_city" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/billing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display"
                android:padding="10dp"
                android:text="BILLING ADDRESS"
                android:textColor="@color/black"
                android:textStyle="bold"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewShipping">

            </TextView>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Same as shipping address"
                android:layout_marginRight="10dp"
                android:id="@+id/cb_same_shipping"
                android:buttonTint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewShipping">

            </CheckBox>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewBilling"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/billing">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline55_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.30" />

                    <TextView
                        android:id="@+id/textView166_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_address_street_address"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/etStreetAddressBilling"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display"
                        android:lineSpacingExtra="5dp"
                        android:maxLines="2"
                        android:padding="5dp"
                        android:scrollbars="vertical"
                        android:background="@drawable/curved_bg_transparent"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline55_"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view22_"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/etStreetAddressBilling">

                    </View>

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrierSt_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
